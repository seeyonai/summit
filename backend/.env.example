# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
DB_NAME=summit

# Server Configuration
PORT=2591

# Recording storage directory (defaults to ../files during dev)
# Set to an absolute path to override, e.g. /var/data/recordings
RECORDING_FILE_DIR=

# Optional audio encryption key (32-byte base64 or 64-char hex) to enable AES-256-GCM
# Generate with: openssl rand -hex 32
AUDIO_ENCRYPTION_KEY=

# Custom Authentication Service Configuration
# Base URL for the external authentication service
UNSAFE_AUTH_SERVICE_BASE_URL=http://localhost:4423
# Authentication method to use (default: V5_MD5)
AUTH_METHOD=V5_MD5

# OpenAI / LLM Configuration (for transcript analysis)
# SUMMIT_OPENAI_API_KEY=sk-...
# SUMMIT_OPENAI_BASE_URL=https://api.openai.com/v1
# SUMMIT_OPENAI_MODEL=gpt-4o

# Fast model (optional)
# SUMMIT_FAST_OPENAI_API_KEY=sk-...
# SUMMIT_FAST_OPENAI_BASE_URL=https://api.openai.com/v1
# SUMMIT_FAST_OPENAI_MODEL=gpt-4o-mini


# InText Extraction Configuration (for transcript chunking and processing)
# SUMMIT_INTEXT_CHUNK_TOKENS=500
# SUMMIT_INTEXT_OVERLAP_TOKENS=50
# SUMMIT_INTEXT_CONCURRENCY=8
